+    void connectSocket()
+    {
+        qCDebug(QT_BT_OPENHARMONY) << "Connecting socket";
+        int clientSocket;
+        if (!QJsSocket::instance()->connect(m_deviceId, m_uuid, m_secure, m_sppType, &clientSocket)) {
+            emit socketConnectFailed();
+            QThread::currentThread()->quit();
+            return;
+        }
+        qCDebug(QT_BT_OPENHARMONY) << "Socket connection established" << clientSocket;
+        emit socketConnectDone(clientSocket);
+    }
+
+    void closeSocket(int clientSocket)
+    {
+        qCDebug(QT_BT_OPENHARMONY) << "Executing queued closeSocket()" << clientSocket;
+
+        if (clientSocket != -1 && !QJsSocket::instance()->closeClient(clientSocket)) {
+            qCWarning(QT_BT_OPENHARMONY) << "Error during closure of abandoned socket";
+        }
+
+        QThread::currentThread()->quit();
+    }
