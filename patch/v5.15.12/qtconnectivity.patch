+QString QJsSocket::remoteAddress(int clientSocket)
+{
+    //clientSocket来自sppConnect的回调
+    if(clientSocket == -1)
+        return QString();
+
+    return QtOh::runOnJsUIThreadWithResult([=, this](){
+        Napi::Value result = call("getDeviceId", {Napi::Number::New(env(), clientSocket)});
+        return QString::fromStdString(result.ToString());
+    });
