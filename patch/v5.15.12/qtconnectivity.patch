+      return;
+
+    this.callback.stop();
+    this.gattServer.close();
+    this.callback = null;
+    this.gattServer = null;
+    globalThis.qtbluetooth.connectChanged(this.qtObject, 0 /*NoError*/, 0 /*QLowEnergyController::UnconnectedState*/);
