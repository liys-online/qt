+bool QJsSocket::connect(QString deviceId, QString uuid, bool secure, int sppType, int *clientSocket)
+{
+    std::promise<bool> promise;
+    auto future = promise.get_future();
+    QtOh::runOnJsUIThreadNoWait([=, &clientSocket, &promise, this] {
+        Napi::Object sppOptions = Napi::Object::New(env());
+        sppOptions.Set("uuid", uuid.toStdString());
+        sppOptions.Set("secure", secure);
+        sppOptions.Set("type", sppType);
+
+        Napi::Function callback = Napi::Function::New(env(), [&](const Napi::CallbackInfo &info) {
+            bool result = false;
+
+            if (info.Length() >= 2 && info[0].IsNull()) {
+                result = true;
+                qCWarning(QT_BT_OPENHARMONY) << "sppConnect res socketId:" << info[1].ToNumber().Int32Value();
+                *clientSocket = info[1].ToNumber().Int32Value();
+            } else {
+                if (info.Length() >= 1 && !info[0].IsNull()) {
+                    Napi::Object error = info[0].As<Napi::Object>();
+                    int code = error.Get("code").ToNumber().Int32Value();
+                    qCWarning(QT_BT_OPENHARMONY) << "sppConnect failed" << code
+                               << error.Get("message").ToString().Utf8Value().c_str();
+                } else {
+                    qCWarning(QT_BT_OPENHARMONY) << "sppConnect failed, error unknown";
+                }
+            }
+
+            promise.set_value(result);
+        });
+
+        call("sppConnect",
+             { Napi::String::New(env(), deviceId.toStdString()), sppOptions, callback });
+        this->m_remoteDeviceId = deviceId;
+    });
+
+    return future.get();
+}
+
+bool QJsSocket::read(std::function<void (QByteArray)> &func)
+{
+    if(m_clientSocket == -1)
+        return false;
+
+    QtOh::runOnJsUIThreadAndWait([=, this](){
+        Napi::Function callback = Napi::Function::New(env(), [&](const Napi::CallbackInfo& info) {
+            if (info.Length() < 2) {
+                qCWarning(QT_BT_OPENHARMONY) << "sppRead failed, error unkonwn";
+                return;
+            }
+
+            if (!info[0].IsNull()) {
+                Napi::Object error = info[0].As<Napi::Object>();
+                int code = error.Get("code").ToNumber().Int32Value();
+                if (code != 0){
+                    qCWarning(QT_BT_OPENHARMONY) << "sppRead failed" << code << error.Get("message").ToString().Utf8Value().c_str();
+                    return;
+                }
+            }
+
+            auto receiveData = info[1];
+            if(receiveData.IsArrayBuffer()){
+                Napi::ArrayBuffer arrayBuffer = receiveData.As<Napi::ArrayBuffer>();
+                char *data = (char *)arrayBuffer.Data();
+                size_t bufferSize = arrayBuffer.ByteLength();
+                func(QByteArray(data, bufferSize));
+            }
+        });
+
+        call("on", {Napi::String::New(env(), "sppRead"),
+                     Napi::Number::New(env(), m_clientSocket), callback});
+    });
+
+    return true;
+}
+
+bool QJsSocket::write(QByteArray data)
+{
+    if(m_clientSocket == -1)
+        return false;
+
+    QtOh::runOnJsUIThreadNoWait([=, this](){
+        int size = data.length();
+        Napi::ArrayBuffer arrayBuffer = Napi::ArrayBuffer::New(env(), size);
+        char *jsData = (char *)arrayBuffer.Data();
+        size_t bufferSize = arrayBuffer.ByteLength();
+        if(bufferSize < (size_t)size){
+            qCWarning(QT_BT_OPENHARMONY) << "QJsSocket::write create arrayBuffer error";
+            return false;
+        }
+        memcpy(jsData, data.constData(), size);
+        call("sppWrite", {Napi::Number::New(env(), m_clientSocket), arrayBuffer});
+    });
+
+    return true;
+}
+
+bool QJsSocket::closeClient(int clientSocket)
+{
+    if (clientSocket == -1)
+        return false;
+
+    QtOh::runOnJsUIThreadNoWait([=, this]() {
+        call("off", { Napi::String::New(env(), "sppRead") });
+        call("sppCloseClientSocket", { Napi::Number::New(env(), clientSocket) });
+    });
+
+    return true;
+}
+
+bool QJsSocket::closeServer()
+{
+    if(m_clientSocket != -1){
+        serverAlive = false;
+        QtOh::runOnJsUIThreadNoWait([this](){
+            call("sppCloseServerSocket", {Napi::Number::New(env(), m_clientSocket)});
+        });
+    }
+
+    return true;
+}
+
+
+
+QJsSocket *QJsSocket::instance()
+{
+    return jsSocket();
+}
