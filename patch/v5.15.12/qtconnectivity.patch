+static QByteArray encodeNdefRecord(Napi::Object record, uint32_t index, uint32_t totalRecords){
+    /* [记录头] [类型长度] [载荷长度] [ID长度] [类型数据] [ID数据] [载荷数据] */
+    QByteArray result;
+
+    if (!record.Has("tnf") || !record.Has("rtdType") || !record.Has("payload")) {
+        qWarning() << "Invalid record object!";
+        return QByteArray();
+    }
+
+    uint8_t header = 0x00;
+    if (index == 0) { /* 设置 MB (Message Begin) 标志 */
+        header |= 0x80; // MB = 1
+    } else if (index == totalRecords - 1) { /* 设置 MB (Message End) 标志 */
+        header |= 0x40; // ME = 1
+    }
+
+    uint8_t tnf = 0;
+    if (record.Has("tnf")) {
+        tnf = record.Get("tnf").ToNumber().Uint32Value() & 0x07;
+    } else {
+        qWarning() << "Invalid object record!";
+    }
+    header |= tnf;
+    result.append(static_cast<char>(header));
+
+    uint8_t typeLength = 0;
+    QByteArray typeData;
+    Napi::Value typeValue = record.Get("rtdType");
+    if (typeValue.IsArray()) {
+        Napi::Array typeArray = typeValue.As<Napi::Array>();
+        typeLength = typeArray.Length();
+        typeData = NapiArrayToQByteArray(typeArray);
+    }
+    result.append(static_cast<char>(typeLength));
+
+    uint32_t payloadLength = 0;
+    QByteArray payloadData;
+    Napi::Value payloadValue = record.Get("payload");
+    if (payloadValue.IsArray()) {
+        Napi::Array payloadArray = payloadValue.As<Napi::Array>();
+        payloadLength = payloadArray.Length();
+        payloadData = NapiArrayToQByteArray(payloadArray);
+    }
+
+    if (payloadLength < 256) {
+        header |= 0x10;
+        result[0] = static_cast<char>(header);
+        result.append(static_cast<char>(payloadLength));
+    } else {
+        result.append(static_cast<char>((payloadLength >> 24) & 0xFF));
+        result.append(static_cast<char>((payloadLength >> 16) & 0xFF));
+        result.append(static_cast<char>((payloadLength >> 8) & 0xFF));
+        result.append(static_cast<char>(payloadLength & 0xFF));
+    }
+
+    uint8_t idLength = 0;
+    QByteArray idData;
+    if (record.Has("id")) {
+        Napi::Value idValue = record.Get("id");
+        if (idValue.IsArray()) {
+            Napi::Array idArray = idValue.As<Napi::Array>();
+            idLength = idArray.Length();
+            idData = NapiArrayToQByteArray(idArray);
+        }
+    }
+
+    if (idLength > 0) {
+        header |= 0x08;
+        result[0] = static_cast<char>(header);
+        result.append(static_cast<char>(idLength));
+    }
+
+    if (typeLength > 0) {
+        result.append(typeData);
+    }
+
+    if (idLength > 0) {
+        result.append(idData);
+    }
+
+    if (payloadLength > 0) {
+        result.append(payloadData);
+    }
+
+    return result;
+}
+
+//should call in js ui thread
+static QByteArray serialize_napi_value(const Napi::Value& val) {
+    if(!val.IsArray())
+        return QByteArray();
+
+    QByteArray result;
+    Napi::Array records = val.As<Napi::Array>();
+    uint32_t recordCount = records.Length();
+    if (recordCount == 0) {
+        qWarning() << "No NDEF records found";
+        return result;
+    }
+
+    for (uint32_t i = 0; i < recordCount; i++) {
+        Napi::Object record = records.Get(i).As<Napi::Object>();
+        QByteArray encodedRecord = encodeNdefRecord(record, i, recordCount);
+        if (!encodedRecord.isEmpty()) {
+            result.append(encodedRecord);
+        }
+    }
+
+    return result;
+}
