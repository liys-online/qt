+void QBluetoothServiceDiscoveryAgentPrivate::start(const QBluetoothAddress &address)
+{
+    Q_Q(QBluetoothServiceDiscoveryAgent);
+
+    //仅BLE才有服务发现api
+    QBluetoothAddress remoteAddress = discoveredDevices.at(0).address();
+    QScopedPointer<QJsGattClientDevice> jsGattClientDevice(
+            QJsBle::instance()->createGattClientDevice(remoteAddress.toString()));
+    bool result = jsGattClientDevice->connect();
+    if (!result) {
+        error = QBluetoothServiceDiscoveryAgent::UnknownError;
+        errorString = QBluetoothServiceDiscoveryAgent::tr("client connect gatt fail!");
+        emit q->error(error);
+
+        _q_serviceDiscoveryFinished();
+        return;
+    }
+
+    QString uuidsStr;
+    result = jsGattClientDevice->getServices(&uuidsStr);
+    if (!result) {
+        error = QBluetoothServiceDiscoveryAgent::UnknownError;
+        errorString = QBluetoothServiceDiscoveryAgent::tr("gatt getServices fail!");
+        emit q->error(error);
+
+        _q_serviceDiscoveryFinished();
+        return;
+    }
+
+    const QStringList uuidsList = uuidsStr.split(QStringLiteral(" "), QString::SkipEmptyParts);
+    QList<QBluetoothUuid> uuids;
+    for (const QString &entry : uuidsList) {
+        uuids << QBluetoothUuid(entry);
+    }
+    _q_processFetchedUuids(remoteAddress, uuids);
+
+
+    if (!localDeviceReceiver) {
+        localDeviceReceiver = new OhLocalDeviceBroadcastReceiver();
+        QObject::connect(localDeviceReceiver, &OhLocalDeviceBroadcastReceiver::hostModeStateChanged,
+                         q, [this](QBluetoothLocalDevice::HostMode state){
+                             this->_q_hostModeStateChanged(state);
+                         });
+    }
+
+    _q_serviceDiscoveryFinished();
+}
