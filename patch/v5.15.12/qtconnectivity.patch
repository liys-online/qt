+        return localDevices;
+    }
+    
+    QBluetoothHostInfo info;
+    //QJsConnect接口前提是蓝牙已开启
+    info.setName(QJsConnect::instance()->localName());
+    //TODO:openharmony没有相关api获取local设备地址
+    localDevices.append(info);
+
