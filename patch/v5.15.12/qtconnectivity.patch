+
+static OhDeviceDiscoveryBroadcastReceiver *receiver = nullptr;
+
+OhDeviceDiscoveryBroadcastReceiver::OhDeviceDiscoveryBroadcastReceiver()
+{
+    receiver = this;
+    m_thread = new ParseThread;
+}
+
+OhDeviceDiscoveryBroadcastReceiver::~OhDeviceDiscoveryBroadcastReceiver()
+{
+    receiver = nullptr;
+    if (m_thread->isRunning())
+        m_thread->quit();
+}
+
+OhDeviceDiscoveryBroadcastReceiver *OhDeviceDiscoveryBroadcastReceiver::ohDiscoveryReceiver()
+{
+    return receiver;
+}
+
+void OhDeviceDiscoveryBroadcastReceiver::received(bool isBle, const QString &target)
+{
+    {
+        QMutexLocker locker(&m_mutex);
+        m_targets.append({isBle, target});
+    }
+    if (!m_thread->isRunning())
+        m_thread->start();
+}
+
+void ParseThread::run()
+{
+    while (true) {
+        if (!receiver)
+            break;
+        QString target;
+        bool isBle;
+        {
+            QMutexLocker locker(&receiver->m_mutex);
+            if (!receiver->m_targets.isEmpty()) {
+                auto deviceInfo = receiver->m_targets.takeFirst();
+                target = deviceInfo.deviceId;
+                isBle = deviceInfo.isble;
+            }
+        }
+        if (!target.isEmpty()) {
+            int classOfDevice = QJsConnect::instance()->remoteClassOfDevice(target);
+            QString name = QJsConnect::instance()->remoteDeviceName(target);
+            QBluetoothDeviceInfo info(QBluetoothAddress(target), name, classOfDevice);
+            info.setCoreConfigurations(isBle ? QBluetoothDeviceInfo::LowEnergyCoreConfiguration
+                                             : QBluetoothDeviceInfo::BaseRateCoreConfiguration);
+            emit receiver->deviceDiscovered(info, isBle);
+        } else {
+            QThread::sleep(1);
+            static int index = 0;
+            index++;
+            if (index > 10) {
+                index = 0;
+                break;
+            }
+        }
+    }
+}
