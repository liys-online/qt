+QBluetoothLocalDevice::Pairing QBluetoothLocalDevice::pairingStatus(
+        const QBluetoothAddress &address) const
+{
+    Pairing pairingStatus = Unpaired;
+    if (!isValid())
+        return pairingStatus;
