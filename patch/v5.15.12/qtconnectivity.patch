+void QJsConnect::startListener()
+{
+    if(isStartedListener)
+        return;
+    isStartedListener = true;
+    QtOh::runOnJsUIThreadNoWait([this]() {
+        Napi::Function pinRequiredCallback =
+                Napi::Function::New(env(), [&](const Napi::CallbackInfo &info) {
+                    Napi::Object pinRequiredParam = info[0].As<Napi::Object>();
+                    QString deviceId =
+                            QString::fromStdString(pinRequiredParam.Get("deviceId").ToString());
+                    QString pinCode =
+                            QString::fromStdString(pinRequiredParam.Get("pinCode").ToString());
+                    qCWarning(QT_BT_OPENHARMONY) << Q_FUNC_INFO << "pinRequired:" << deviceId << pinCode;
+                    lastPairingDeviceId = deviceId;
+                    auto localDeviceReceiver =
+                            OhLocalDeviceBroadcastReceiver::ohLocalDecviceReceiver();
+                    QMetaObject::invokeMethod(localDeviceReceiver, "onReceivePinRequired",
+                                              Qt::QueuedConnection, Q_ARG(QString, deviceId),
+                                              Q_ARG(QString, pinCode));
+                });
+
+        // 主动配对（pairDevice）或收到其他设备的配对请求，都会触发
+        call("on", { Napi::String::New(env(), "pinRequired"), pinRequiredCallback });
+
+        Napi::Function bondStateChangeCallback =
+                Napi::Function::New(env(), [&](const Napi::CallbackInfo &info) {
+                    Napi::Object bondStateParam = info[0].As<Napi::Object>();
+
+                    QString deviceId =
+                            QString::fromStdString(bondStateParam.Get("deviceId").ToString());
+                    BondState state = static_cast<BondState>(bondStateParam.Get("state").ToNumber().Int32Value());
+                    UnbondCause unbondCause = static_cast<UnbondCause>(bondStateParam.Get("cause").ToNumber().Int32Value());
+
+                    qCWarning(QT_BT_OPENHARMONY) << Q_FUNC_INFO << "bondStateChange:" << deviceId << state << unbondCause;
+
+                    auto localDeviceReceiver =
+                            OhLocalDeviceBroadcastReceiver::ohLocalDecviceReceiver();
+
+                    QMetaObject::invokeMethod(localDeviceReceiver, "onReceiveBondStateChange",
+                                              Qt::QueuedConnection, Q_ARG(QString, deviceId),
+                                              Q_ARG(QJsConnect::BondState, state), Q_ARG(QJsConnect::UnbondCause, unbondCause));
+                });
+
+        call("on", { Napi::String::New(env(), "bondStateChange"), bondStateChangeCallback });
+
+    });
+}
+
+void QJsConnect::stopListener()
+{
+    isStartedListener = false;
+    QtOh::runOnJsUIThreadNoWait([this]() {
+        call("off", { Napi::String::New(env(), "pinRequired") });
+    });
+}
