+class SocketConnectWorker : public QObject
+{
+    Q_OBJECT
+public:
+    SocketConnectWorker(const QString &deviceId, const QString &uuid, bool secure, int sppType)
+        : QObject(),
+          m_deviceId(deviceId),
+          m_uuid(uuid),
+          m_secure(secure),
+          m_sppType(sppType)
+    {
+    }
