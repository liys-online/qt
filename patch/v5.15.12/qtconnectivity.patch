+void QJsAccess::startListener()
+{
+    QtOh::runOnJsUIThreadNoWait([this]() {
+        Napi::Function stateChangeCallback =
+                Napi::Function::New(env(), [&](const Napi::CallbackInfo &info) {
+                    BluetoothState bluetoothState =
+                            static_cast<BluetoothState>(info[0].As<Napi::Number>().Int32Value());
+                    if (STATE_ON == bluetoothState) {
+                        QJsConnect::instance()->startListener();
+                    }
+                });
+
+        call("on", { Napi::String::New(env(), "stateChange"), stateChangeCallback });
+    });
+}
