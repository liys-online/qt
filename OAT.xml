<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <oatconfig>
        <policylist>
            <policy name="defaultPolicy" desc="">
                <policyitem type="copyright" name="Copyright (C) 2025 iSoftStone. All rights reserved." path=".*" rule="may" group="defaultGroup" filefilter="copyrightPolicyFilter" desc=""/>
                <policyitem type="license" name="LGPLStyleLicense" path=".*" rule="may" group="defaultGroup" filefilter="defaultPolicyFilter" desc=""/>
            </policy>
        </policylist>
        <filefilterlist>
            <!-- 公共过滤器，适用于 license 和 copyright -->
            <filefilter name="defaultFilter" desc="Files that do not need scanning for license or copyright">
                <!-- 构建/脚本/配置文件 -->
                <filteritem type="filename" name="*.patch" desc="patch 文件"/>
                <filteritem type="filename" name="*.bat|*.sh" desc="脚本文件"/>
                <filteritem type="filename" name="*.json|*.profile|*.conf|.tag" desc="配置文件"/>
                <filteritem type="filename" name="LICENSE.*" desc="license 文件"/>
                <filteritem type="filename" name=".gitignore|.gitattributes" desc="git 配置文件"/>
                <!-- Qt 项目文件 -->
                <filteritem type="filename" name="*.qdocconf|*.ui|*.qrc|*.ts|*.pri" desc="Qt 项目文件"/>
                <!-- dist 目录 -->
                <filteritem type="filepath" name=".*/changes-5.12.12" desc="dist 目录下文件"/>
                <!-- script 目录 -->
                <filteritem type="filepath" name="./script" desc="script 目录下文件"/>
                <!-- Qt 自动生成文件 -->
                <filteritem type="filename" name="moc_*.cpp|ui_*.h|qrc_*.cpp" desc="Qt auto-generated files"/>
                <!-- Examples/Tests -->
                <filteritem type="filepath" name=".*/examples/.*" desc="skip examples"/>
                <filteritem type="filepath" name=".*/tests/.*" desc="skip tests"/>
            </filefilter>
        </filefilterlist>
    </oatconfig>
</configuration>
